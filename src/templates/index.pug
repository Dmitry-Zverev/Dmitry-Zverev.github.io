include ../assets/pug/header.pug
section
    block content
        .news
            .container
                h2.block-title.block-title_red.block-title_uppercase новости
                .row
                    include ../assets/pug/db.pug
                    each val in db
                        .news-item
                            .news-item__img
                                img(src=val.img alt="") 
                            .news-item__text
                                h3.news-title
                                    a(href="#" class="news-title__link")!= val.title
                                p.news-text!= val.text
                            .news-item__btn
                                a(href="#" class="news-link") читать дальше
section
    block content
        .offers
            .container
                h2.block-title.block-title_red.block-title_uppercase акции
                .row
                    include ../assets/pug/db-offers.pug
                    each val in db_offers
                        .offers-item
                            a(href="#")
                                img(src=val.img class="offers-item__img" alt="")
include ../assets/pug/footer.pug