            block content
                .offers
                    .container
                        h2.block-title.block-title_red.block-title_uppercase акции
                        .row
                            include ../assets/pug/db-offers.pug
                            each val in db_offers
                                .offers-item
                                    a(href="#")
                                        img(src=val.img class="offers-item__img" alt="")
